{
  "name": "Axpert Inverter (HID)",
  "version": "0.5.42-GVENTURA",
  "slug": "axpert_hid",
  "description": "Monitors an axpert inverter with HID support",
  "arch": [
    "amd64",
    "armv7"
  ],
  "startup": "application",
  "boot": "auto",
  "init": true,
  "privileged": [
    "SYS_RAWIO",
    "SYS_ADMIN"
  ],
  "devices": [
    "/dev/hidraw0:/dev/hidraw0:rwm",
    "/dev/hidraw1:/dev/hidraw1:rwm",
    "/dev/ttyUSB0:/dev/ttyUSB0:rwm"
  ],
  "options": {
    "mqtt_server": "192.168.1.86",
    "mqtt_user": "mqtt-voltronic",
    "mqtt_pass": "89342107dD",
    "mqtt_client_id": "axpert-ha",
    "mqtt_topic_parallel": "power/axpert",
    "mqtt_topic_settings": "power/axpert_settings",
    "mqtt_topic": "power/axpert{sn}",
    "mqtt_healthCheck": "axpert/healthCheck",
    "device": "/dev/ttyUSB0",
    "data_interval": 2,
    "settings_interval": 600,
    "health_interval": 20,
    "poll_interval": "1"
  },
  "schema": {
    "mqtt_server": "str",
    "mqtt_user": "str",
    "mqtt_pass": "str",
    "mqtt_client_id": "str",
    "mqtt_topic_parallel": "str",
    "mqtt_topic_settings": "str",
    "mqtt_topic": "str",
    "mqtt_healthCheck": "str",
    "device": "str",
    "poll_interval": "str",
    "data_interval": "int",
    "health_interval": "int",
    "settings_interval": "int"
  }
}